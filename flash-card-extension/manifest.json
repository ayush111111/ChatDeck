{
  "manifest_version": 3,
  "name": "Flashcard Creator - Text & Chat to Anki",
  "version": "1.1",
  "description": "Generate Anki flashcards from ChatGPT conversations or any text content on any webpage",
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content_script.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Flashcard Tool"
  }
}
